@page "/ApiVisualiser"
@using System.ComponentModel.DataAnnotations

<h3>Api Visualiser</h3>

<EditForm Model="Model" OnValidSubmit="Submit" FormName="">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <label>
        Identifier: 
        <InputText @bind-Value="Model!.Url" />
    </label>
    <button type="submit">Submit</button>
</EditForm>

@code {
    [SupplyParameterFromForm]
    public ApiGrab? Model { get; set; }

    protected override void OnInitialized() => Model ??= new();

    private void Submit() => Console.WriteLine("New URL Submitted");

    public class ApiGrab
    {
        [Required]
        public string? Url { get; set; }
    }

}
